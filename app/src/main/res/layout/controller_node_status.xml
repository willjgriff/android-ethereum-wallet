<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/xsmall">

        <TextView
            android:id="@+id/controller_node_status_peers"
            style="@style/Text.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Peers: "
            tools:text="Connected Peers: 0"/>

        <TextView
            android:id="@+id/controller_node_status_text"
            style="@style/Text.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Latest 3 block headers: "/>

        <TextView
            android:id="@+id/controller_node_status_node_details"
            style="@style/Text.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Node Details"/>

    </LinearLayout>
</ScrollView>