<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <declare-styleable name="ValidatedTextInputLayout">
        <attr name="error_text" format="reference|string"/>
        <attr name="android:inputType"/>
        <attr name="validator"/>
    </declare-styleable>

    // Note the next flag value should be 4
    <attr name="validator" format="integer">
        <flag name="notEmpty" value="1"/>
        <flag name="blockRange" value="2"/>
    </attr>

</resources>